<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="297dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    tools:context=".Diagnostico_Fragment">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="41dp"
        android:layout_weight="1"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center_horizontal"
        android:text="Datos para diagnóstico"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:fontFamily="@font/montserrat_medium"
        android:text="Sexo"
        android:textColor="#80909F"
        android:textSize="21sp" />

    <Spinner
        android:id="@+id/spinnerSexo"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:clipChildren="true"
        android:minHeight="48dp"
        android:spinnerMode="dropdown"
        tools:ignore="SpeakableTextPresentCheck"
        android:background="@drawable/ic_spinnerbg"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_medium"
                android:text="Edad"
                android:textColor="#80909F"
                android:textSize="21sp" />

            <EditText
                android:id="@+id/editTextTextEdad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_inputbg"
                android:ems="10"
                android:fontFamily="@font/montserrat_medium"
                android:inputType="number"
                android:minHeight="48dp"
                android:textColor="#A8B3BD"
                android:textColorHighlight="#A8B3BD"
                android:textColorHint="#80909F"
                android:textColorLink="#80909F"
                android:textSize="21sp"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_medium"
                android:text="Meses / Años"
                android:textColor="#80909F"
                android:textSize="21sp" />

            <Spinner
                android:id="@+id/spinnerEdad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_spinneredad"
                android:clipChildren="true"
                android:minHeight="48dp"
                android:spinnerMode="dropdown"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:fontFamily="@font/montserrat_medium"
        android:text="Nivel de hemoglobina"
        android:textColor="#80909F"
        android:textSize="21sp" />

    <EditText
        android:id="@+id/editTextTextHemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/ic_inputbg"
        android:ems="10"
        android:fontFamily="@font/montserrat_medium"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:textColor="#A8B3BD"
        android:textColorHighlight="#A8B3BD"
        android:textColorHint="#80909F"
        android:textColorLink="#80909F"
        android:textSize="21sp"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/btnEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="58dp"
        android:layout_weight="1"
        android:src="@drawable/ic_btn_send_disable" />
</LinearLayout>